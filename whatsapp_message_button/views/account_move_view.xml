<odoo>
    <record id="view_move_form_whatsapp" model="ir.ui.view">
        <field name="name">account.move.form.whatsapp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_send_whatsapp" type="object" string="Send WhatsApp"
                    class="btn btn-success" icon="fa-whatsapp"/>
            </header>
        </field>
    </record>
</odoo>
