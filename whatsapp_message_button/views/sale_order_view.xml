<odoo>
    <record id="view_order_form_whatsapp" model="ir.ui.view">
        <field name="name">sale.order.form.whatsapp</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_send_whatsapp" type="object" string="Send WhatsApp"
                    class="btn btn-success" icon="fa-whatsapp"/>
            </header>
        </field>
    </record>
</odoo>
